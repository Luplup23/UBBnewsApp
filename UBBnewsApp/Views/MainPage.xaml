<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UBBnewsApp.MainPage"
>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <SearchBar
                    x:Name="SearchBar"
                    SearchCommand="{Binding SearchCommand}"
                    SearchCommandParameter="{Binding Text, Source={x:Reference SearchBar}}"
                />

                <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand"
                    Padding="10"
                >
                    <Button
                        Text="Ogólne"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="Ogólne"
                    />
                    <Button
                        Text="AZS"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="AZS"
                    />
                    <Button
                        Text="WBMII"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="WBMiI"
                    />
                    <Button
                        Text="WH-S"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="WH-S"
                    />
                    <Button
                        Text="WNoZ"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="WNoZ"
                    />
                    <Button
                        Text="chór"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="chór"
                    />
                    <Button
                        Text="Clear"
                        Command="{Binding FilterPostsCommand}"
                        CommandParameter="Clear"
                    />
                </StackLayout>

                <ActivityIndicator
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                />

                <CollectionView ItemsSource="{Binding Posts}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout
                            Style="{StaticResource GridStackLayout}"
                                >
                                <Grid
                                    Style="{StaticResource MainGrid}"
                                >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Source="{Binding ImageUrl}"
                                        Style="{StaticResource HeaderImage}"
                                    >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding BindingContext.OpenUrlCommand, 
                                                          Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                CommandParameter="{Binding Url}"
                                            />
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Frame
                                        Style="{StaticResource CategoryFrame}"
                                    >
                                        <Label
                                            Text="{Binding Category}"
                                            Style="{StaticResource CategoryLabel}"
                                        />
                                    </Frame>
                                    <Grid Style="{StaticResource StyledGrid}" Grid.Row="1">
                                        <Label
                                            Text="{Binding Title}"
                                            Style="{StaticResource TitleLabel}">

                                        <Label.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding BindingContext.OpenUrlCommand, 
                                                              Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                    CommandParameter="{Binding Url}"
                                                />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                </Grid>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <StackLayout
                Style="{StaticResource PaginationStackLayout}"
                    >
                    <Button
                        Text="Previous"
                        Command="{Binding PreviousPageCommand}"
                        IsVisible="{Binding IsPreviousPageVisible}"
                    />
                    <Button
                        Text="Next"
                        Command="{Binding NextPageCommand}"
                        IsVisible="{Binding IsNextPageVisible}"
                    />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
